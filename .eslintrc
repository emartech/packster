{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "expect": true,
    "sinon": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "no-unused-expressions": 0,
    "require-yield": 0,
    "security/detect-non-literal-fs-filename": 0,
    "security/detect-object-injection": 0,
    "consistent-this": 0,
    "curly": ["error", "multi-line"]
  },
  "extends": [
    "emarsys"
  ]
}
